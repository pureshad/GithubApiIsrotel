<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Github API", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-light bg-light form-inline mt-8">
                @using (Html.BeginForm("GetRepositories", "Home", FormMethod.Get))
                {
                    <input class="form-control" placeholder="Search repositories..." @Html.TextBox("KeyWord", ViewBag.CurrentFilter as string) />
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                }
            </div>
            <div class="navbar-right">
                @Html.Partial("_LoginPartial")
            </div>
        </div>

    </nav>
    <div class="container body-content">

        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
